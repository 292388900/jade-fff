extends ../layout

block append head
  title=fmt.message("employer-deals.title", locale)
block append content
  .container
    h1=fmt.message("employer-deals.heading", locale)
    form.form-sort(name="employerDealsFilter", id="employerDealsFilter", action="", method="get")
      .row
        .col-md-6
          .btn-group.btn-group-xs(data-toggle="buttons")
            label.btn.btn-default#showAll=fmt.message("employer-deals.filter.show-all", locale)
              input(type="checkbox", name="showAll", value="1")
          .btn-group.btn-group-xs(data-toggle="buttons")
            label.btn.btn-default#hideFired=fmt.message("employer-deals.filter.hide-fired", locale)
              input(type="checkbox", name="hideFired", value="1", checked=employerDealsFilter.hideFired)
            label.btn.btn-default#hideApproved=fmt.message("employer-deals.filter.hide-approved", locale)
              input(type="checkbox", name="hideApproved", value="1", checked=employerDealsFilter.hideApproved)
            input(type="hidden", name="sortColumn", id="sortColumn")
            input(type="hidden", name="sortAsc", id="sortAsc")
            input(type="hidden", name=csrf.getParameterName(), value=csrf.getToken())

    table.table.table-striped#table-sort
      thead
        tr
          th.sorting(data-id="title")=fmt.message("employer-deals.deal.title", locale)
          th.sorting(data-id="creation_date")=fmt.message("employer-deals.deal.date-created", locale)
          th.sorting(data-id="max_updated_date")=fmt.message("employer-deals.deal.date-updated", locale)
          th.sorting(data-id="status")=fmt.message("employer-deals.deal.status", locale)
          th.sorting(data-id="bids")=fmt.message("employer-deals.deal.bids", locale)
          th.sorting(data-id="lastname")=fmt.message("employer-deals.deal.recruiter", locale)
          th.sorting(data-id="unseen_applicants")=fmt.message("employer-deals.deal.applicants", locale)
          th
      tbody
