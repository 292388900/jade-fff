extends ../layout

block append head
  title=fmt.message("employer-profile.title", locale)
block append content
  .container
    h2=fmt.message("employer-profile.h1", locale)
    form(name="employerForm", action="", method="post")
      .row
        .col-md-6
          .form-group
            label(for="firstName")
            input(type="text", class="form-control", id="firstName", name="firstName", value=employerForm.firstName, placeholder=fmt.message("profile.firstName", locale))
            #{errors.firstName}
          .form-group
            label(for="lastName")
            input(type="text", class="form-control", id="lastName", name="lastName", value=employerForm.lastName, placeholder=fmt.message("profile.lastName", locale))
            #{errors.lastName}
          .form-group
            label(for="description")
            input(type="text", class="form-control", id="description", name="description", value=employerForm.description, placeholder=fmt.message("profile.description", locale))
            #{errors.description}
          .form-group
            label(for="oldPassword")
            input(type="password", class="form-control", id="oldPassword", name="oldPassword", value=employerForm.oldPassword, placeholder=fmt.message("profile.oldPassword", locale))
            #{errors.oldPassword}
          .form-group
            label(for="newPassword")
            input(type="password", class="form-control", id="newPassword", name="newPassword", value=employerForm.newPassword, placeholder=fmt.message("profile.newPassword", locale))
            #{errors.newPassword}
          .form-group
            input(type="hidden", id="id", name="id", value=employerForm.id)
            input(type="hidden", name=csrf.getParameterName(), value=csrf.getToken())
            #{errors.id}
          input.btn.btn-success(type="submit", name="submit", value=fmt.message("profile.submit", locale))=fmt.message("profile.submit", locale)