extends ../layout

block append head
  title=fmt.message("employer-progress-vacancy-show.title")
block append content
  .container
    h1=fmt.message("employer-progress-vacancy-show.h1")
    .row
      .col-md-8
        h2
        dl.dl-horizontal
          dt=fmt.message("employer-progress-vacancy-show.dt.name")
          dd #{deal.vacancy.title}
          dt=fmt.message("employer-progress-vacancy-show.dt.description")
          dd #{deal.vacancy.description}
          dt=fmt.message("employer-progress-vacancy-show.dt.salary")
          dd=fmt.currencyRange(deal.vacancy.salaryFrom, deal.vacancy.salaryTo)
          dt=fmt.message("employer-progress-vacancy-show.dt.creation")
          dd #{fmt.date(deal.vacancy.creationDate)}
          dt=fmt.message("employer-progress-vacancy-show.dt.expiration")
          dd #{fmt.date(deal.vacancy.expirationDate)}
      .col-md-4
        h2=fmt.message("employer-progress-vacancy-show.recruiter.h2")
        p
          #{deal.recruiter.user.firstName} #{deal.recruiter.user.lastName}
          .tools
            form(name="", action=domain.getAbsoluteUrl() + "/employer-fire-recruiter", method="post")
              .row
                .col-md-6
                  textarea(class="form-control", name="message", placeholder=fmt.message("employer-progress-vacancy-show.recruiter.decline.reason"), rows="4")
              .btn-row
                input(type="hidden", name=csrf.getParameterName(), value=csrf.getToken())
                input(type="hidden", name="id", value=deal.id)
                input.btn.btn-danger(type="submit", name="submit", value=fmt.message("employer-progress-vacancy-show.recruiter.decline"))
    h2=fmt.message("employer-progress-vacancy-show.applicants.h2")
    .row
      .col-md-6
        ul.list-group
          for applicant in deal.applicants
            li.list-group-item
              #{applicant.firstName} #{applicant.lastName}
              a.btn.btn-link.pull-right(href = domain.getAbsoluteUrl() + "/employer-applicant-show/" + applicant.id).
                #{fmt.message("employer-progress-vacancy-show.applicants.more")}
