extends ../layout

block append head
  title=fmt.message("employer-recruiter-search.title")
block append content
  .container
    h1=fmt.message("employer-recruiter-search.h1")
    ol
      for vacancy in vacancies
        li
          a.btn.btn-link.black(href = domain.getAbsoluteUrl() + "/employer-show-recruiter-bids/" + vacancy.id)
            #{vacancy.title} &nbsp;
            | (#{vacancy.bidCount})