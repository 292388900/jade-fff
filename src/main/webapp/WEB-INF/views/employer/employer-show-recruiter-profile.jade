extends ../layout

block append head
  title=fmt.message("employer-show-recruiter-profile.title", locale)
block append content
  .container
    h1.text-center=fmt.message("employer-show-recruiter-profile.h1", locale)
    .row
      .col-md-4
        img(src=domain.getResourceUrl('/stylesheets/images/empty_avatar.jpg'))
      .col-md-8
        h2
        dl.dl-horizontal
          dt=fmt.message("employer-show-recruiter-profile.dt.name", locale)
          dd #{recruiter.user.firstName} #{recruiter.user.lastName}
          dt=fmt.message("employer-show-recruiter-profile.dt.description", locale)
          dd #{recruiter.user.description}
    h2.text-center=fmt.message("employer-show-recruiter-profile.feedback.h2", locale)
    .row
      .col-md-6
