extends ../layout

block append head
  title=fmt.message("employer-vacancy-create.title")
block append content
  .container
    h1=fmt.message("employer-vacancy-create.h1")
    form(name="applicantForm", action="", method="post", enctype="multipart/form-data")
      .row
        .col-md-6
          .form-group
            label(for="title")=fmt.message("employer-vacancy-create.form.title")
            input(type="text", class="form-control", id="title", name="title", value=vacancyForm.title, placeholder=fmt.message("employer-vacancy-create.form.title"))
            #{errors.title}
          .form-group
            label(for="description")=fmt.message("employer-vacancy-create.form.description")
            textarea(class="form-control", id="description", name="description", placeholder=fmt.message("employer-vacancy-create.form.description"))=vacancyForm.description
            #{errors.description}
          .form-group
            label(for="pay-from")
              =fmt.message("employer-vacancy-create.form.salary")
            .row
              .col-xs-3
                input(type="number", class="form-control", id="salaryFrom", name="salaryFrom", value=vacancyForm.salaryFrom, placeholder=fmt.message("employer-vacancy-create.form.salaryFrom"))
              .col-xs-3
                input(type="number", class="form-control", id="salaryTo", name="salaryTo", value=vacancyForm.salaryTo, placeholder=fmt.message("employer-vacancy-create.form.salaryTo"))
            #{errors.salaryFrom}
          .form-group
            label(for="expirationDate")=fmt.message("employer-vacancy-create.form.expirationDate")
            .row
              .col-xs-4
                input(type="text", class="form-control datepicker", id="expirationDate", name="expirationDate", value=vacancyForm.expirationDate, placeholder=fmt.message("employer-vacancy-create.form.expirationDate"))
            #{errors.expirationDate}
          .form-group
            label(for="testFile")=fmt.message("employer-vacancy-create.form.testFile")
            input(type="file", id="testFile", name="testFile", value=vacancyForm.testFile, placeholder=fmt.message("employer-vacancy-create.form.testFile"))
            #{errors.testFile}
          .checkbox
            label(for="publish")=fmt.message("employer-vacancy-create.form.publish")
            input(type="checkbox", id="publish", name="publish", value="1", checked=vacancyForm.publish)
            input(type="hidden", name=csrf.getParameterName(), value=csrf.getToken())
            #{errors.publish}
          input.btn.btn-success(type="submit", name="submit", value=fmt.message("employer-vacancy-create.form.add"))=fmt.message("employer-vacancy-create.form.add")
