extends ../layout

block append head
  title=fmt.message("employer-vacancy-edit.title", locale)
block append content
  .container
    h1=fmt.message("employer-vacancy-edit.h1", locale)
    form(name="applicantForm", action="", method="post", enctype="multipart/form-data")
      .row
        .col-md-6
          .form-group
            label(for="title")=fmt.message("employer-vacancy-edit.form.title", locale)
            input(type="text", class="form-control", id="title", name="title", value=vacancyForm.title, placeholder=fmt.message("employer-vacancy-edit.form.title", locale))
            #{errors.title}
          .form-group
            label(for="description")=fmt.message("employer-vacancy-edit.form.description", locale)
            textarea(class="form-control", id="description", name="description", placeholder=fmt.message("employer-vacancy-edit.form.description", locale))=vacancyForm.description
            #{errors.description}
          .form-group
            label(for="pay-from")
              =fmt.message("employer-vacancy-edit.form.salary", locale)
            .row
              .col-xs-3
                input(type="number", class="form-control", id="salaryFrom", name="salaryFrom", value=vacancyForm.salaryFrom, placeholder=fmt.message("employer-vacancy-edit.form.salaryFrom", locale))
              .col-xs-3
                input(type="number", class="form-control", id="salaryTo", name="salaryTo", value=vacancyForm.salaryTo, placeholder=fmt.message("employer-vacancy-edit.form.salaryTo", locale))
            #{errors.salaryFrom}
          .form-group
            label(for="expirationDate")=fmt.message("employer-vacancy-edit.form.expirationDate", locale)
            .row
              .col-xs-5
                input.datepicker(size=16, type="text", name="expirationDate", name="expirationDate", value=vacancyForm.expirationDate, placeholder=fmt.message("employer-vacancy-edit.form.expirationDate", locale), data-date-format="yyyy-mm-dd")
                span.input-group-addon.autowidth#dateicon
                  span.glyphicon.glyphicon-calendar
            #{errors.expirationDate}
          .form-group
            label(for="testFile")=fmt.message("employer-vacancy-edit.form.testFile", locale)
            if vacancyForm.testFileId
              a.btn.btn-link(href=domain.buildFullUri("/employer-download-attachment/", vacancyForm.testFileId, locale))=fmt.message("employer-vacancy-edit.form.testExists", locale)
            input(type="file", id="testFile", name="testFile", placeholder=fmt.message("employer-vacancy-edit.form.testFile", locale))
            #{errors.testFile}
          .checkbox
            label(for="publish")=fmt.message("employer-vacancy-edit.form.publish", locale)
            input(type="checkbox", id="publish", name="publish", value="1", checked=vacancyForm.publish)
            input(type="hidden", name="id", value=vacancyForm.id)
            input(type="hidden", name="testFileId", value=vacancyForm.testFileId)
            input(type="hidden", name=csrf.getParameterName(), value=csrf.getToken())
            #{errors.publish}
          input.btn.btn-success(type="submit", name="submit", value=fmt.message("employer-vacancy-edit.form.add", locale))=fmt.message("employer-vacancy-edit.form.add", locale)
