!!! 5
html
  head
    meta(charset="utf-8")
    block head
      script(src="http://code.jquery.com/jquery-2.0.3.js")
      script(src=domain.getResourceUrl() + '/js/lib/bootstrap.js')
      script(src=domain.getResourceUrl() + '/js/lib/bootstrap-confirmation.js')
      script(src=domain.getResourceUrl() + '/js/lib/bootstrap-datepicker.js')
      script(src=domain.getResourceUrl() + '/js/confirmation.js')
      script(src=domain.getResourceUrl() + '/js/language.js')
      link(href=domain.getResourceUrl() + '/stylesheets/lib/bootstrap.min.css', rel='stylesheet', type='text/css')
      link(href=domain.getResourceUrl() + '/stylesheets/lib/bootstrap-theme.min.css', rel='stylesheet', type='text/css')
      link(href=domain.getResourceUrl() + '/stylesheets/lib/datepicker.css', rel='stylesheet', type='text/css')
      link(href=domain.getResourceUrl() + '/stylesheets/lib/font-awesome.min.css', rel='stylesheet', type='text/css')
      link(href=domain.getResourceUrl() + '/stylesheets/colors.css', rel='stylesheet', type='text/css')
      link(href=domain.getResourceUrl() + '/stylesheets/advanced-lists.css', rel='stylesheet', type='text/css')
      link(href=domain.getResourceUrl() + '/stylesheets/table.css', rel='stylesheet', type='text/css')
      link(href=domain.getResourceUrl() + '/stylesheets/buttons.css', rel='stylesheet', type='text/css')
      link(href=domain.getResourceUrl() + '/stylesheets/new.css', rel='stylesheet', type='text/css')
  body
    block content
      .navbar.navbar-default(role="navigation")
        .container
          .navbar-header
            a.navbar-brand(href=domain.getAbsoluteUrl()).
              #{fmt.message("layout.logo", locale)}
            a.btn.btn-link#lang(href=domain.getLangChangeUrl())=fmt.message("language.change", locale)
          if security.isUserInRole("ROLE_RECRUITER")
            .navbar-collapse.collapse
              ul.nav.navbar-nav.navbar-right
                li#fat-menu.dropdown
                  a(href="#", id="menu", role="button", class="dropdown-toggle", data-toggle="dropdown")
                    span.glyphicon.glyphicon-star
                    b.caret
                  ul(class="dropdown-menu", role="menu", aria-labelledby="menu")
                    li(role="presentation")
                      a(href=domain.getAbsoluteUrl() + "/recruiter-profile", role="menuitem", tabindex="-1").
                        #{fmt.message("layout.recruiter.profile", locale)}
                    li(role="presentation")
                      a(href=domain.getAbsoluteUrl() + "/recruiter-active-deals", role="menuitem", tabindex="-1").
                        #{fmt.message("layout.recruiter.vacancies_in_progress", locale)}
                    li(role="presentation")
                      a(href=domain.getAbsoluteUrl() + "/recruiter-active-bids", role="menuitem", tabindex="-1").
                        #{fmt.message("layout.recruiter.my_applications", locale)}
                    li(role="presentation")
                      a(href=domain.getAbsoluteUrl() + "/recruiter-find-new-vacancies?showVacancies=1&showBids=1&showDeals=1", role="menuitem", tabindex="-1").
                        #{fmt.message("layout.recruiter.vacancy_search", locale)}
                    li(role="presentation", class="divider")
                    li(role="presentation")
                      form(action=domain.getAbsoluteUrl() + "/j_spring_security_logout", method="post")
                        input.btn.btn-link(type="submit", name="submit", value=fmt.message("layout.exit", locale))
                        input(type="hidden", name=csrf.getParameterName(), value=csrf.getToken())
          if security.isUserInRole("ROLE_EMPLOYER")
            .navbar-collapse.collapse
              ul.nav.navbar-nav.navbar-right
                li#fat-menu.dropdown
                  a(href="#", id="menu", role="button", class="dropdown-toggle", data-toggle="dropdown")
                    span.glyphicon.glyphicon-star
                    b.caret
                  ul(class="dropdown-menu", role="menu", aria-labelledby="menu")
                    li(role="presentation")
                      a(href=domain.getAbsoluteUrl() + "/employer-profile", role="menuitem", tabindex="-1").
                        #{fmt.message("layout.employer.profile", localey)}
                    li(role="presentation")
                      a(href=domain.getAbsoluteUrl() + "/employer-recruiter-search", role="menuitem", tabindex="-1").
                        #{fmt.message("layout.employer.recruiter_choose", locale)}
                    li(role="presentation")
                      a(href=domain.getAbsoluteUrl() + "/employer-progress-vacancies-list", role="menuitem", tabindex="-1").
                        #{fmt.message("layout.employer.recruiter_vacancies", locale)}
                    li(role="presentation", class="divider")
                    li(role="presentation")
                      form(action=domain.getAbsoluteUrl() + "/j_spring_security_logout", method="post")
                        input.btn.btn-link(type="submit", name="submit", value=fmt.message("layout.exit", locale))
                        input(type="hidden", name=csrf.getParameterName(), value=csrf.getToken())
