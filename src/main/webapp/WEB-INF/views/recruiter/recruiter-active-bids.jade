extends ../layout

block append content
  .container
    h1 Мои заявки
    table.table.table-striped
      thead
        tr
          th Наименование
          th Описание
          th Статус
          th Дата создания
          th
      tbody
        for bid in bids
          tr
            td #{bid.vacancy.title}
            td #{bid.vacancy.description}
            td #{bid.status}
            td #{bid.vacancy.creationDate}
            td
              a.btn.btn-link(href=domain.getAbsoluteUrl() + "/recruiter-show-bid-vacancy/" + bid.id).
                Подробнее
