extends ../layout

block append head
  title=fmt.message("recruiter-add-applicant.title", locale)
block append content
  .container
    h2=fmt.message("recruiter-add-applicant.h1", locale)
    form(name="applicantForm", action="", method="post", enctype="multipart/form-data")
      .row
        .col-md-6
          .form-group
            label(for="firstName")
            input(type="text", class="form-control", id="firstName", name="firstName", value=applicantForm.firstName, placeholder=fmt.message("recruiter-add-applicant.firstName", locale))
            #{errors.firstName}
          .form-group
            label(for="lastName")
            input(type="text", class="form-control", id="lastName", name="lastName", value=applicantForm.lastName, placeholder=fmt.message("recruiter-add-applicant.lastName", locale))
            #{errors.lastName}
          .form-group
            label(for="description")
            textarea(class="form-control", id="description", name="description", placeholder=fmt.message("recruiter-add-applicant.description", locale))#{applicantForm.description}
            #{errors.description}
          .form-group
            label(for="resumeFile")=fmt.message("recruiter-add-applicant.resumeFile", locale)
            input(type="file", id="resumeFile", name="resumeFile", value=applicantForm.resumeFile, placeholder=fmt.message("recruiter-add-applicant.resumeFile", locale))
            #{errors.resumeFile}
          .form-group
            label(for="testAnswerFile")=fmt.message("recruiter-add-applicant.testAnswerFile", locale)
            input(type="file", id="testAnswerFile", name="testAnswerFile", value=applicantForm.testAnswerFile, placeholder=fmt.message("recruiter-add-applicant.testAnswerFile", locale))
            #{errors.testAnswerFile}
          .form-group
            input(type="hidden", id="dealId", name="dealId", value=applicantForm.dealId)
            input(type="hidden", id="id", name="id", value=applicantForm.id)
            input(type="hidden", name=csrf.getParameterName(), value=csrf.getToken())
          input.btn.btn-success(type="submit", name="submit", value=fmt.message("recruiter-add-applicant.add", locale))=fmt.message("recruiter-add-applicant.add", locale)
          a.btn.btn-link(href="#")
            a(href=domain.buildFullUri("/recruiter-show-in-progress-vacancy/", applicantForm.dealId, locale))=fmt.message("recruiter-add-applicant.back", locale)