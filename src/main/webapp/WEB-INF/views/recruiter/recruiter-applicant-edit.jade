extends ../layout

block append head
  title=fmt.message("recruiter-applicant-edit.title", locale)
block append content
  .container
    h2=fmt.message("recruiter-applicant-edit.heading", locale)
    form(name="applicantForm", action="", method="post", enctype="multipart/form-data")
      .row
        .col-md-6
          .form-group
            label(for="firstName")
            input(type="text", class="form-control", id="firstName", name="firstName", placeholder=fmt.message("recruiter-applicant-edit.firstName", locale), value=applicantForm.firstName)
            #{errors.firstName}
          .form-group
            label(for="lastName")
            input(type="text", class="form-control", id="lastName", name="lastName", placeholder=fmt.message("recruiter-applicant-edit.lastName", locale), value=applicantForm.lastName)
            #{errors.lastName}
          .form-group
            label(for="description")
            textarea(class="form-control", id="description", name="description", placeholder=fmt.message("recruiter-applicant-edit.description", locale))#{applicantForm.description}
            #{errors.description}
          .form-group
            label(for="resumeFile")=fmt.message("recruiter-applicant-edit.resumeFile", locale)
            if applicantForm.resumeFileId
              a.btn.btn-link(href=domain.buildFullUri("/recruiter-download-attachment/", applicantForm.resumeFileId, locale))=fmt.message("recruiter-applicant-edit.resumeExists", locale)
            input(type="file", id="resumeFile", name="resumeFile", placeholder=fmt.message("recruiter-applicant-edit.resumeFile", locale), value=applicantForm.resumeFile)
            #{errors.resumeFile}
          .form-group
            label(for="testAnswerFile")=fmt.message("recruiter-applicant-edit.testAnswerFile", locale)
            if applicantForm.testAnswerFileId
              a.btn.btn-link(href=domain.buildFullUri("/recruiter-download-attachment/", applicantForm.testAnswerFileId, locale))=fmt.message("recruiter-applicant-edit.testAnswerExists", locale)
            input(type="file", id="testAnswerFile", name="testAnswerFile", placeholder=fmt.message("recruiter-applicant-edit.testAnswerFile", locale), value=applicantForm.testAnswerFile)
            #{errors.testAnswerFile}
          .form-group
            input(type="hidden", id="dealId", name="dealId", value=applicantForm.dealId)
            input(type="hidden", id="id", name="id", value=applicantForm.id)
            input(type="hidden", name=csrf.getParameterName(), value=csrf.getToken())
          input.btn.btn-success(type="submit", name="submit", value=fmt.message("recruiter-applicant-edit.save", locale))=fmt.message("recruiter-applicant-edit.save", locale)
          a.btn.btn-link(href=domain.buildFullUri("/recruiter-show-in-progress-vacancy/", applicantForm.dealId, locale))=fmt.message("recruiter-applicant-edit.back", locale)