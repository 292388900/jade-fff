extends ../layout

block append content
  .container
    h1 Поиск новых вакансий
    table.table.table-striped
      thead
        tr
          th Наименование
          th Описание
          th Дата создания
          th
      tbody
        for vacancy in vacancies
          tr
            td #{vacancy.title}
            td #{vacancy.description}
            td #{vacancy.creationDate}
            td
              a.btn.btn-link(href=domainName + "/recruiter-show-vacancy/" + vacancy.id).
                Подробнее