extends ../layout

block append content
  .container
    h2=fmt.message("profile.title")
    form(name="recruiterForm", action="", method="post")
      .row
        .col-md-6
          .form-group
            label(for="firstName")
            input(type="text", class="form-control", id="firstName", name="firstName", value=recruiterForm.firstName, placeholder=fmt.message("profile.firstName"))
            #{errors.firstName}
          .form-group
            label(for="lastName")
            input(type="text", class="form-control", id="lastName", name="lastName", value=recruiterForm.lastName, placeholder=fmt.message("profile.lastName"))
            #{errors.lastName}
          .form-group
            label(for="oldPassword")
            input(type="password", class="form-control", id="oldPassword", name="oldPassword", value=recruiterForm.oldPassword, placeholder=fmt.message("profile.oldPassword"))
            #{errors.oldPassword}
          .form-group
            label(for="newPassword")
            input(type="password", class="form-control", id="newPassword", name="newPassword", value=recruiterForm.newPassword, placeholder=fmt.message("profile.newPassword"))
            #{errors.newPassword}
          .form-group
            input(type="hidden", id="id", name="id", value=recruiterForm.id)
            #{errors.id}
          input.btn.btn-success(type="submit", name="submit", value=fmt.message("profile.submit"))=fmt.message("profile.submit")