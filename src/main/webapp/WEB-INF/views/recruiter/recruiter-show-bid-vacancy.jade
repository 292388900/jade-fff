extends ../layout

block append content
  .container
    h1=fmt.message("recruiter-show-bid-vacancy.h1")
    dl.dl-horizontal
      dt=fmt.message("recruiter-show-bid-vacancy.dt.title")
      dd #{vacancy.title}
      dt=fmt.message("recruiter-show-bid-vacancy.dt.description")
      dd #{vacancy.description}
      dt=fmt.message("recruiter-show-bid-vacancy.dt.salary")
      dd #{vacancy.salary}
      dt=fmt.message("recruiter-show-bid-vacancy.dt.creationDate")
      dd #{vacancy.creationDate}
      dt=fmt.message("recruiter-show-bid-vacancy.dt.expirationDate")
      dd #{vacancy.expirationDate}
      dt=fmt.message("recruiter-show-bid-vacancy.dt.status")
      dd #{vacancy.status}