extends ../layout

block append content
  .container
    h1 Просмотр вакансии
    dl.dl-horizontal
      dt Наименование
      dd #{vacancy.title}
      dt Описание
      dd #{vacancy.description}
      dt Диапазон з/п
      dd #{vacancy.salary}
      dt Дата создания
      dd #{vacancy.creationDate}
      dt Дата окончания
      dd #{vacancy.expirationDate}

    form(name="", action="", method="post")
      .row
        .col-md-6
          textarea(class="form-control js-message-for-bid", name="message", placeholder="Условия работы", rows="4")

      .btn-row
        input.btn.btn-primary(type="submit", name="submit", value="Предложить свои услуги")
        a.btn.btn-link(href=domain.getAbsoluteUrl() + "/recruiter-find-new-vacancies") К списку вакансий