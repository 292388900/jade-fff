extends ../layout

block append head
  title=fmt.message("recruiter-vacancies-find.title", locale)
block append content
  .container
    h1=fmt.message("recruiter-vacancies-find.h1", locale)
    form.form-sort(name="recruiterVacanciesFilter", id="recruiterVacanciesFilter", action="", method="get")
      .row
        .col-md-3
          .input-group
            label(for="searchText")
            input.inputtext(type="text", id="searchText", name="searchText", value=recruiterVacanciesFilter.searchText, placeholder=fmt.message("recruiter-vacancies-find.form.search", locale))
            span.input-group-addon.autowidth
              span.glyphicon.glyphicon-search
        .col-md-6
          .btn-group.btn-group-xs(data-toggle="buttons")
            label.btn.btn-default#showAll=fmt.message("recruiter-vacancies-find.form.show-all", locale)
              input(type="checkbox", name="showAll", value="1")
          .btn-group.btn-group-xs(data-toggle="buttons")
            label.btn.btn-default#hideVacancies=fmt.message("recruiter-vacancies-find.form.hide-vacancies", locale)
              input(type="checkbox", name="hideVacancies", value="1", checked=recruiterVacanciesFilter.hideVacancies)
            label.btn.btn-default#hideBids=fmt.message("recruiter-vacancies-find.form.hide-bids", locale)
              input(type="checkbox", name="hideBids", value="1", checked=recruiterVacanciesFilter.hideBids)
            label.btn.btn-default#hideDeals=fmt.message("recruiter-vacancies-find.form.hide-deals", locale)
              input(type="checkbox", name="hideDeals", value="1", checked=recruiterVacanciesFilter.hideDeals)
      .row
        .col-md-1
          ul.pager
            li.next
              a#prevDateLink(href="#") <
        .col-md-2
          .input-group.dateadjust
            input.datepicker(type="text", size=10, name="date", data-date-format="yyyy-mm-dd", value=recruiterVacanciesFilter.date)
            span.input-group-addon.autowidth#dateicon
              span.glyphicon.glyphicon-calendar
            input(type="hidden", name="sortColumn", id="sortColumn")
            input(type="hidden", name="sortAsc", id="sortAsc")
            input(type="hidden", name=csrf.getParameterName(), value=csrf.getToken())
        .col-md-1
          ul.pager
            li.previous
              a#nextDateLink(href="#") >
    table.table.table-striped#table-sort
      thead
        tr
          th.sorting#stitle=fmt.message("recruiter-vacancies-find.table.name", locale)
          th.sorting#sdescription=fmt.message("recruiter-vacancies-find.table.description", locale)
          th.sorting#screation_date=fmt.message("recruiter-vacancies-find.table.date", locale)
          th.sorting#stype=fmt.message("recruiter-vacancies-find.table.bidOrDeal", locale)
      tbody